#pengulangan dengan for
for x in range(1, 6):
    print("belajar pengulangan for" ,x)
print("=============================" )
b=5; #variabel awal
for y in range(0, 5):  # n-1
    b-=1;  # b= b-1
    print(y,"belajar pengulangan for" ,b)
print("=============================" )

count = 0 #harga awal
while (count <= 5):
 print('The count is:', count)
 count = count + 1

print('Good bye!')